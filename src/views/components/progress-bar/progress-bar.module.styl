.wrapper
  background-color: var(--color-bg-a3)
  color: var(--color-fg)
  border: 1px solid var(--color-bg-a6)
  border-radius: 4px
  overflow: hidden
  display: flex
  align-items: center

.progress
  transition: .2s width
  font-size: 0.875rem
  background-color: var(--color-bg-button)

.progress_inner_container
  padding: 0.4rem 0.75rem
  text-align: center
