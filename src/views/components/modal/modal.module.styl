.outer_wrapper
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: alpha(#000, 0.2)
  backdrop-filter: blur(10px)
  z-index: 4
  display: flex
  align-items: center
  justify-content: center
  padding: 1.25rem

.wrapper
  width: 100%
  max-width: 600px
  background-color: var(--color-bg)
  border: 1px solid var(--color-bg-a3)
  border-radius: 10px
  box-shadow: 0 2px 16px rgba(0, 0, 0, 0.1)
  padding: 1.25rem
