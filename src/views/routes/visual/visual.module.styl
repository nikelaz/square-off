.zoom_controls
  gap: 0.25rem !important
  position: absolute
  top: 0.25rem
  right: 0.25rem
  z-index: 1
  opacity: 0
  transition: .2s opacity

.zoom_controls_wrapper
  position: relative
  &:hover .zoom_controls
    opacity: 1

.screenshot_border
  border: 1px solid var(--color-bg-a5)
  transition: .2s border-color
  &:hover,
  &:focus
    border-color: var(--color-bg-a6)